<%- include('../partials/header') %>

    <div class="newCatForm">

        <h1>Enter a new cat for adoption</h1>

        <div>
            <form action="/cats/" method="POST">
                <label for="imgUrl">
                    URL to the cat photo:
                    <input type="url" name="imgUrl">
                </label>
                <label for="name">
                    Name:
                    <input type="text" name="name">
                </label>
                <label for="sex">
                    Sex:
                    <input type="text" name="sex">
                </label>
                <label for="age">
                    Age:
                    <input type="number" name="age">
                </label>
                <label for="breed">
                    Breed:
                    <input type="text" name="breed">
                </label>
                <label for="health">
                    Health Condition:
                    <input type="text" name="health">
                </label>
                <label for="adoptionStatus">
                    Adoption Status:
                    <input type="text" name="adoptionStatus">
                </label>
                <input type="submit" value="Add Cat">
            </form>
        </div>
    </div>

<%- include('../partials/footer') %>