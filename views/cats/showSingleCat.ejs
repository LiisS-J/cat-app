<h2>This is where our single kitty information shows up =)</h2>

<section>
    <div>
        Photo:
    </div>
    <div>
        ID: <%= cat._id %> 
    </div>
    <div>
        Name: <%= cat.name %> 
    </div>
    <div>
        Sex: <%= cat.sex %> 
    </div>
    <div>
        Breed: <%= cat.breed %> 
    </div>
    <div>
        Health Condition: <%= cat.healthCondition %> 
    </div>
    <div>
        Adoption Status: <%= cat.adoptionStatus %> 
    </div>
    <div>
        Applicants for this cat:
        <%= applicants.length %>
        <% applicants.forEach(function(a) { %>
             <div>
                <%= a._id %> 
            </div>
            <div>
                <%= a.name %>
            </div>
        <% }); %>
    </div>
</section>

<div id="adoptCat">
    <a href="/cats/<%= cat._id %>/adopt/new">Adopt Me!</a>
</div>